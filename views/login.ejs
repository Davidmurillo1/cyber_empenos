<%- include('partials/headerLogin') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <i class="bi bi-person-add" style="font-size: 3rem; color: green;"></i>
                    <h3>Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    <form action="/login" method="post">
                        <!-- Campo Usuario -->
                        <div class="form-group">
                            <label for="usuario">Usuario</label>
                            <input type="text" class="form-control" id="usuario" name="username" placeholder="Ingresa tu usuario">
                        </div>
                        
                        <!-- Campo Contraseña -->
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña">
                        </div>

                        <% if (error && error.length > 0) { %>
                            <div class="alert alert-dismissible alert-danger">
                                <strong>Ups! <%= error %></strong>
                            </div>
                        <% } %>

                        <!-- Botón de Inicio de Sesión -->
                        <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
