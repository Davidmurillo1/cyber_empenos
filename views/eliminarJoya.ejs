<% if (role === 'admin') { %>
    <%- include('partials/headerAdmin.ejs') %>
<% } else { %>
    <%- include('partials/headerEmpleado') %>
<% } %>

<style>
    /* Estilos personalizados */
    body {
        background-color: #f8f9fa;
    }
    .card-header i {
        font-size: 3rem;
        color: green;
    }
    .form-group label {
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center bg-secondary text-white">
                    <i class="bi bi-gem" style="font-size: 3rem; color: red;"></i>
                    <h2>Eliminar Joya</h2>
                    <% if (exito && exito.length > 0) { %>
                        <div class="alert alert-dismissible alert-success">
                            <strong>Muy bien!</strong>  <%= exito[0] %>
                          </div>
                    <% } %>
                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-dismissible alert-danger">
                            <strong>Ups!</strong>  <%= error[0] %>
                        </div>
                    <% } %>
                </div>
                <div class="card-body">
                    <form action="/eliminar-joya" method="post">
                        <input type="hidden" name="joyaId" value="<%= joya.id %>">
                        <!-- Campo Boleta -->
                        <div class="form-group">
                            <label for="boleta" class="font-weight-bold">Boleta:</label>
                            <input type="text" class="form-control" id="boleta" name="boleta" placeholder="Número de boleta" value="<%= joya.boleta %>" required readonly>
                        </div>

                        <!-- Campo Joya -->
                        <div class="form-group">
                            <label for="joya" class="font-weight-bold">Joya:</label>
                            <input type="text" class="form-control" id="joya" name="joya" placeholder="Nueva descripción de la joya" value="<%= joya.joya %>" required readonly>
                        </div>

                        <!-- Campo Descripción -->
                        <div class="form-group">
                            <label for="descripcion" class="font-weight-bold">Descripción:</label>
                            <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Nueva descripción detallada" value="<%= joya.descripcion %>" required readonly>
                        </div>

                        <!-- Campo Material -->
                        <div class="form-group">
                            <label for="exampleSelect1" class="form-label">Material Registrado: <%= joya.material %></label>
                        </div>

                        <!-- Campo Kilates -->
                        <div class="form-group">
                            <label for="exampleSelect1" class="form-label">Kilates Registrados: <%= joya.kilates %></label>
                        </div>

                        <!-- Campo Peso -->
                        <div class="form-group">
                            <label for="peso" class="font-weight-bold">Peso Registrado:</label>
                            <input type="text" class="form-control" id="peso" name="peso" placeholder="<%= joya.peso %>" value="<%= joya.peso %>" required readonly>
                        </div>

                        <!-- Campo Precio -->
                        <div class="form-group">
                            <label for="peso" class="font-weight-bold">Valor Registrado: </label>
                            <input type="text" class="form-control" id="valor" name="valor" placeholder="Nuevo valor en colones" value="¢<%= formatNumber(joya.valor) %>" required readonly>
                        </div>

                        <!-- Botón Registrar Joya -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Eliminar Joya</button>
                        </div>
                    </form>
                    <p class="text-body-tertiary"><a href="/empeno/<%= joya.boleta %>">Ir al perfil del Empeño</a></p>
                </div>
            </div>
        </div>
    </div>
</div>